<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.plm.activiti.mapper.ActivitiMapper" >

    <insert id="addBatch" parameterType="java.util.Map">
        insert into batch(buskey) values (#{buskey})
    </insert>

    <select id="queryBatch"  resultType="java.util.Map"  >
        select batch_id,buskey,DATE_FORMAT(createtime,'%Y-%m-%d %H:%i:%s') as createtime  from batch order by createtime desc
    </select>

</mapper>